// Enforcing options
{ "bitwise": true
, "eqeqeq": true
, "forin": true
, "immed": true
, "maxcomplexity": 4
, "maxdepth": 3
, "maxlen": 80
, "newcap": true
, "noarg": true
, "plusplus": true
, "regexp": true
, "trailing": true
, "undef": true
, "unused": true

// Relaxing options
, "lastsemic": true
, "newcap": false

// Environment options
, "browser": true
, "es5": true
, "node": true
, "predef":
    [ "define"
    , "requirejs"
    ]

// don't use; sets "white" to true and many other side effects from jslint
// , "indent": 4
}
